<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mypageMapper">

	<resultMap type="User" id="userResultSet">
		<result column="USER_ID" property="userId" />
		<result column="USER_PWD" property="userPwd" />
		<result column="EMAIL" property="email" />
		<result column="JOINDATE" property="joinDate" />
		<result column="PROFILE_PATH" property="profilePath" />
		<result column="PROFILE_ORIGINNAME" property="profileOriginName"/>
		<result column="PROFILE_CHANGEPATH" property="profileChangePath"/>
		<result column="STATUS" property="status" />
		<result column="SHOP_BRANDCHEK" property="shopBrandChek" />
		<result column="USER_MEMO" property="userMemo" />
		<result column="PROFILE_ORIGINNAME"	property="profileOriginName" />
		<result column="PROFILE_CHANGENAME"	property="profileChangeName" />
	</resultMap>
	
	<resultMap type="FollowList" id="followResultSet">
		<result column="TO_USER" property="toUser" />
		<result column="FROM_USER" property="fromUser" />
	</resultMap>
	
	<resultMap type="Feed" id="feedResultSet">
			<result column="FEED_NO" property="feedNo"/>
			<result column="FEED_CONTENT" property="feedContent"/>
			<result column="FEED_WRITER" property="feedWriter"/>
			<result column="CREATE_DATE" property="createDate"/>
			<result column="ORIGIN_NAME" property="originName"/>
			<result column="CHANGE_NAME" property="changeName"/>
			<result column="STATUS" property="status"/>
			<result column="FEED_LOCATION" property="feedLocation"/>
		</resultMap>
	
	<select id="loginUser" resultMap="userResultSet">
		SELECT *
		FROM USERS
		WHERE USER_ID = #{userId}
		AND
		STATUS = 'Y'
	</select>

	

	<update id="updateUser" parameterType="User">
		UPDATE USERS
		SET EMAIL=#{email}
		,USER_MEMO =#{userMemo}
		,PROFILE_ORIGINNAME=#{profileOriginName}
		,PROFILE_CHANGENAME=#{profileChangeName}
		WHERE USER_ID=#{userId}
		AND STATUS='Y'
	</update>

	<update id="updatePwd" parameterType="User">
		UPDATE USERS
		SET
		USER_PWD=#{userPwd}
		WHERE USER_ID=#{userId}
		AND STATUS='Y'
	</update>


	<update id="deleteUser" parameterType="string">
		UPDATE USERS
		SET STATUS =
		'N'
		WHERE USER_ID = #{userId}
		AND STATUS = 'Y'
	</update>

	<update id="updateProfile" parameterType="User">
		UPDATE USERS
		SET PROFILE_ORIGINNAME=#{profileOriginName}
		,PROFILE_CHANGENAME	=#{profileChangeName}
		WHERE USER_ID = #{userId}
		AND STATUS = 'Y'
	</update>
	
	<select id="countFollowing" resultType="_int" parameterType="string">
		SELECT COUNT (TO_USER)
		FROM FOLLOWLIST
		WHERE FROM_USER= #{fromUser}
	</select>
	
	<select id="countFollower" resultType="_int" parameterType="string">
		SELECT COUNT (FROM_USER)
		FROM FOLLOWLIST
		WHERE TO_USER= #{toUser}
	</select>
	
 	<select id="countFeed" resultType="_int" parameterType="string">
		  SELECT COUNT (*)
   		 FROM FEED
    	WHERE FEED_WRITER= #{feedWriter}
	</select>
	
	<select id="followingList" resultType="FollowList" parameterType="string">
	SELECT TO_USER
	FROM FOLLOWLIST
	WHERE FROM_USER = #{fromUser}
	</select>

	








</mapper>